<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liangwc.ggblog.mapper.GgArticleInfoMapper">
    <resultMap id="articleMap" type="com.liangwc.ggblog.vo.ArticleVo">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="create_time" property="createTime"/>
        <result column="vister" property="vister"/>
        <association property="article" javaType="com.liangwc.ggblog.entity.GgArticle">
            <id column="id" property="id"/>
            <result column="content" property="content"/>
            <result column="create_time" property="createTime"/>
        </association>
        <collection property="tags" ofType="com.liangwc.ggblog.entity.GgTags">
            <id column="tag_id" property="tagId"/>
            <result column="tag" property="tag"/>
            <result column="article_info_id" property="articleInfoId"/>
        </collection>
    </resultMap>

    <select id="selectArticlePage" resultMap="articleMap">
        SELECT a.id,a.title,a.vister,a.create_time,b.content,c.tag,c.article_info_id
        FROM gg_article_info AS a,gg_article AS b,gg_tags AS c
        WHERE a.article_id = b.id AND a.id = c.article_info_id
    </select>
